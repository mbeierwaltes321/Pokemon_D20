<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokemond20">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_temp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_temp_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokemonD20">
        <activity
            android:name=".activities.NewStatsActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.MovesToPokemonActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PokemonToMovesActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>